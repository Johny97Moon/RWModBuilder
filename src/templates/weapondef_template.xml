<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BaseWeapon">
        <defName>{{def_name}}</defName>
        <label>{{label}}</label>
        <description>{{description}}</description>
        <techLevel>{{tech_level}}</techLevel>
        <weaponTags>
            <li>{{weapon_tag}}</li>
        </weaponTags>
        <weaponClasses>
            <li>{{weapon_class}}</li>
        </weaponClasses>
        <graphicData>
            <texPath>{{texture_path}}</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <WorkToMake>{{work_to_make}}</WorkToMake>
            <Mass>{{mass}}</Mass>
            <AccuracyTouch>{{accuracy_touch}}</AccuracyTouch>
            <AccuracyShort>{{accuracy_short}}</AccuracyShort>
            <AccuracyMedium>{{accuracy_medium}}</AccuracyMedium>
            <AccuracyLong>{{accuracy_long}}</AccuracyLong>
            <RangedWeapon_Cooldown>{{cooldown}}</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <{{material_def_name}}>{{material_count}}</{{material_def_name}}>
        </costList>
        <recipeMaker>
            <researchPrerequisite>{{research_prerequisite}}</researchPrerequisite>
            <skillRequirements>
                <Crafting>{{crafting_skill}}</Crafting>
            </skillRequirements>
        </recipeMaker>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>{{projectile_def_name}}</defaultProjectile>
                <warmupTime>{{warmup_time}}</warmupTime>
                <range>{{range}}</range>
                <soundCast>{{sound_cast}}</soundCast>
                <soundCastTail>{{sound_cast_tail}}</soundCastTail>
                <muzzleFlashScale>{{muzzle_flash_scale}}</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>{{tool_label}}</label>
                <capacities>
                    <li>{{tool_capacity}}</li>
                </capacities>
                <power>{{tool_power}}</power>
                <cooldownTime>{{tool_cooldown}}</cooldownTime>
            </li>
        </tools>
    </ThingDef>
</Defs>
